{
  "name": "baltc-liga-starter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "echo 'static'",
    "dev": "npx wrangler pages dev --port 8787",
    "deploy": "npm run deploy:prod",
    "deploy:prod": "npm run pre-deploy && npx wrangler pages deploy ./public --project-name=baltc-liga-starter && npm run post-deploy",
    "pre-deploy": "npm run validate:prod",
    "post-deploy": "npm run test:prod",
    "validate:prod": "node scripts/validate-deploy.js",
    "test:local": "node scripts/test-apis.js local",
    "test:production": "node scripts/test-apis.js production",
    "test:curl:local": "./scripts/test-apis-curl.sh local",
    "test:curl:production": "./scripts/test-apis-curl.sh production",
    "test:all": "npm run test:local && npm run test:production",
    "monitor": "bash scripts/monitor-deploy.sh",
    "logs": "bash scripts/watch-logs.sh",
    "deploy-and-test": "bash scripts/deploy-and-test.sh",
    "env:dev": "bash scripts/switch-env.sh dev",
    "env:prod": "bash scripts/switch-env.sh prod",
    "auth:help": "open scripts/clear-auth-cache.html",
    "test:bot": "node test-bot-regression.js",
    "test:bot:quick": "node test-quick.js",
    "test:bot:prod": "PRODUCTION_URL=https://baltc-liga.pages.dev node test-production.js",
    "test:bot:all": "npm run test:bot:quick && npm run test:bot",
    "deploy:safe": "bash scripts/safe-deploy.sh",
    "verify:prod": "node scripts/verify-production.js"
  },
  "devDependencies": {
    "bcryptjs": "^3.0.2",
    "hono": "^4.9.8"
  }
}
